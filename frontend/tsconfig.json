{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
      
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*" : ["components/*"],
      "@/public/*":["public/*"],
      "@/lib/*" :["lib/*"]
    }
  },
   "include": [
    "src/**/*",
    "declaration.d.ts",
    "public",
    "utils/**/*",
    "ui_components/**/*",
    "constants/*",
    "config/**/*",
    "types",
    "global.d.ts",
    "store/**/*",
    "api/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next/types/**/*.ts"]

}
